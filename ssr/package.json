{
  "name": "jitube",
  "version": "1.0.0",
  "description": "Cloning Youtube with TypeScript and Express",
  "main": "index.js",
  "scripts": {
    "dev:server": "concurrently -k -p \"npm run watch-ts\" \"npm run watch-node\" --ignore '.scss'",
    "dev:assets": "set WEBPACK_ENV=development&&webpack -w",
    "build:assets": "set WEBPACK_ENV=production&&webpack",
    "watch-ts": "tsc -w",
    "watch-node": "nodemon dist/index.js"
  },
